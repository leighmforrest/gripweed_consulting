---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
import ContentPanel from "../components/ContentPanel.astro";
import TextPanel from "../components/TextPanel.astro";
import Hero from "../components/Hero.astro";
---

<BaseLayout>
  <Hero />
  <ContentPanel id="contact">
    <TextPanel title="Contact Us">
      Ready to build something that works? Use the form below to tell us what
      you need. We review all submissions carefully. Trolls, bots, and
      time-wasters need not apply.
    </TextPanel>
    <ContactForm />
  </ContentPanel>
</BaseLayout>
